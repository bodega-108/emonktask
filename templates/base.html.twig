<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Emonk Task{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('assets/css/black-dashboard.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        {% block header %} 
            <nav class="navbar navbar-expand-lg bg-primary">
  <div class="container">
    <a class="navbar-brand" href="{{ path('tasks') }}"><strong>Emonk Task App</strong></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-bar navbar-kebab"></span>
    <span class="navbar-toggler-bar navbar-kebab"></span>
    <span class="navbar-toggler-bar navbar-kebab"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="{{ path('tasks') }}">Inicio <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Tareas</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('login') }}">Login</a>
        </li>
           <li class="nav-item">
          <a class="nav-link" href="{{ path('register') }}">Registro</a>
        </li>

      </ul>
    </div>
  </div>
</nav>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
             <script src="{{ asset('assets/js/black-dashboard.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
